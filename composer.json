{
  "name": "doitly/projetofullstack",
  "description": "Projeto de hábitos com arquitetura em camadas e evolução incremental",
  "type": "project",
  "license": "proprietary",
  "require": {
    "php": "^8.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "files": [
      "config/security_helpers.php",
      "config/auth_helpers.php",
      "config/error_helpers.php",
      "config/action_helpers.php",
      "config/app_helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform-check": true
  },
  "scripts": {
    "composer:validate": "composer validate --strict --no-check-publish",
    "autoload:dump": "composer dump-autoload -o",
    "autoload:check": "composer dump-autoload -o --strict-psr --strict-ambiguous",
    "test:db:reset": "php scripts/test_db_reset.php",
    "test": "php vendor/bin/phpunit --configuration phpunit.xml",
    "test:unit": "php vendor/bin/phpunit --configuration phpunit.xml --testsuite Unit",
    "test:action": "php vendor/bin/phpunit --configuration phpunit.xml --testsuite Action",
    "qa": [
      "@composer:validate",
      "@autoload:check",
      "@test:unit"
    ]
  }
}
